---
export type Props = {
	variant: "primary" | "secondary";
	class?: string;
};

const { variant, class: className } = Astro.props;
---

<style>
  .primary {
    @apply bg-primary text-white hover:bg-primary/90;
  }
  .secondary {
    @apply bg-transparent border border-gray-400 text-secondary hover:bg-gray-50;
  }
</style>

<button
  class:list={[
    "font-medium text-lg btn-primary py-2 px-6 w-full rounded",
    variant,
    className,
  ]}
>
  <slot />
</button>

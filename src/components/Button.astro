---
export interface Props {
  children: string;
  variant: "primary" | "secondary";
}

const { variant } = Astro.props;
---

<style>
  .primary {
    @apply bg-primary text-white;
  }
  .secondary {
    @apply bg-gray-300 text-primary;
  }
</style>

<button
  class:list={[
    "font-medium text-lg btn-primary py-2 px-6 w-full rounded",
    variant,
  ]}
>
  <slot />
</button>
